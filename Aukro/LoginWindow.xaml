<Window x:Class="Aukro.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aukro"
        mc:Ignorable="d"
        Title="LoginWindow" Height="200" Width="200">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">
            <Label Content="Label"/>
            <TextBox  Text="{Binding User.Username}"/>
            <Label Content="Label"/>
            <TextBox  Text="{Binding User.Password}"/>
            <Button Click="Login_Click" Command="{Binding LoginCommand}" CommandParameter="{Binding User}">Přihlásit se</Button>
            <Button Click="End_Click">Odejít</Button>
        </StackPanel>

    </Grid>
</Window>
